@model Permission
@{

    Layout = "~/Views/Shared/_LayoutSystem.cshtml";

     var userId = Context.Request.RouteValues["Id"];
    //var userId = 34;

    ViewData["ProfileActive"] = "";
    ViewData["HomeActive"] = "";
    ViewData["StudentsActive"] = "";
    ViewData["InstructorsActive"] = "";
    ViewData["LogOutActive"] = "";
    ViewData["PermissionActive"] = "active";
    ViewData["TracksActive"] = "";
    ViewData["EmployeesActive"] = "";
    ViewData["TracksSchedulesActive"] = "";
    ViewData["AllScheduleActive"] = "";
    ViewData["AddNewScheduleActive"] = "";
    ViewData["StudentPermissionActive"] = "";
    ViewData["AttendanceActive"] = "";
    ViewData["StudentPermissionActive"] = "";
    ViewData["TraceAddendanceActive"] = "";
    ViewData["StudentDegreeActive"] = "";
}





<img src="~/Images/permission.svg" class="imgform" alt ="user"/>
<form asp-action="MakePermission" asp-controller="Student" class="Perminssionform ">
    <h1 class="main-titleP">Make A Permission</h1>
    <div class="custom-form-control">
        <label asp-for="Text" class="custome-label ">Permission Reason:</label>
        <input asp-for="Text" class="custome-input" placeholder="Enter Your Permission Reason" required />
        <span class="text-danger"></span>
    </div>
    <div class="custom-form-control my-3">
        <label asp-for="Date" class="custome-label ">Date:</label>
        <input asp-for="Date" id="permissionDate" class="custome-input" placeholder="Enter The Date" required />
        <span class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="State" value="@PermissionState.Pending" />
    <input type="hidden" asp-for="UserId" value="@userId" />


    <div class="custom-form-control my-3">
        <label asp-for="Type" class="custome-label ">Permission Type:</label>
        <select asp-for="Type" class="custome-input" asp-items="Html.GetEnumSelectList<PermissionType>()"></select>
        <span class="text-danger"></span>
    </div>

    <div asp-validation-summary="All" class="text-danger alert-danger"></div>
    <button type="submit" class="btn btn-custom">Send</button>
</form>


@section Scripts {
    <script>
        var today = new Date().toISOString().split('T')[0];
        document.getElementById("permissionDate").setAttribute("min", today);
    </script>
}