@model AttendanceTrackingSystem.Models.User
@{
	ViewData["Title"] = "Profile";
	Layout = "~/Views/Shared/_LayoutSystem.cshtml";
}
<section style="font-size:20px ;height:89vh">
	<div class="container py-5 h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col col-lg-8 ">
				<div class="card" style="border-radius: .5rem;">
					<div class="row g-0">
						<div class="col-md-4 gradient-custom text-center text-white"
							 style="background-color:#AD88C6; border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
							<img src="@ViewBag.img"
								 alt="ProfilePhoto" class="img-fluid my-5" style="width: 80px;" />
							<h5>@Model.Name</h5>
							<p>@ViewBag.role</p>
							@* Edit *@
							<i class="far fa-edit mb-5"></i>

						</div>
						<div style="background-color:#FFE6E6" class="text-dark col-md-8">
							<div class="card-body p-4">
								<h6>Your Information</h6>
								<hr class="mt-0 mb-4">
								<div class="row pt-1">
									<div class="col-12 mb-3">
										<h6>Email</h6>
										<p class="text-muted">@Model.Email</p>
									</div>
									<br />
									<div class="col-12 mb-3">
										<h6>Phone</h6>
										<p class="text-muted text-nowrap">@Model.Phone</p>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
