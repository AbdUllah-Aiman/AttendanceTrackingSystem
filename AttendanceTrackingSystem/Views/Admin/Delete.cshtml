                    // If confirmed, proceed with deletion
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("Delete", "Admin", new { id = Model.UserId })',
                        success: function () {
                            // Show success message
                            Swal.fire(
                                'Deleted!',
                                'Your file has been deleted.',
                                'success'
                            ).then(() => {
                                // Redirect to the desired page after deletion
                                window.location.href = '@Url.Action("Employee", "Admin")';
                            });
                        },
                        error: function () {
                            // Show error message if deletion fails
                            Swal.fire(
                                'Error!',
                                'Failed to delete the employee.',
                                'error'
                            );
                        }
                    });
                }
            });
        }
    </script>
}
