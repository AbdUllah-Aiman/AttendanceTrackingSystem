@model EmployeeViewModel

<div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">@Model.Name</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row" style="padding-left:5vw; padding-top:3vw ">
                    <div class="col-md-4">
                        <img src="@Model.ImgUrl" alt="Employee Image" id="employeeImage" class="img-fluid rounded-circle">
                    </div>
                    <div class="col-md-8">
                        <p><strong>ID:</strong> <span id="modalUserId">@Model.UserId</span></p>
                        <p><strong>Name:</strong> <span id="modalUserName">@Model.Name</span></p>
                        <p><strong>Email:</strong> <span id="modalUserEmail">@Model.Email</span></p>
                        <p><strong>Phone:</strong> <span id="modalUserPhone">@Model.Phone</span></p>
                        <p><strong>Password:</strong> <span id="modalUserPassword">@Model.Password</span></p>
                        <p><strong>Employee Salary:</strong> <span id="modalUserSalary">@Model.EmployeeSalary</span></p>
                        <p><strong>Employee Type:</strong> <span id="modalEmployeeType">@Model.EmployeeType</span></p>
                        <p><strong>User Type:</strong> <span id="modalUserType">@Model.UserType</span></p>
                        <p><strong>Is Approved:</strong> <span id="modalIsApproved">@Model.IsApproved</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

