@model AttendanceViewModel
@{
    SelectList Tracks = new SelectList(Model.Tracks, "TrackId", "Name");
}
@* <div id="title-container">
    <h1 class="main-title">Student Attendance</h1>
    <img src="~/images/confirmed attendance.gif" class="imgTitle" />
</div> *@



    <div class="select-container" >
        <div class="styled-select">
            <select asp-items="Tracks" class="tracksDropdown">
                <option>Select Track</option>
            </select>
        </div>
    </div>


@if (ViewBag.CheckSchedule == null)
{


    <div id="studentListContainer">

        <img src="~/images/college students.gif" height="300vw" style="margin-left:20vw" />
    </div>
}
else
{
    <div class="alert-danger">@ViewBag.CheckSchedule</div>
}
@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/studentattendance.js"></script>
    <script src="~/js/EmployeeAttendance.js"></script>


  <script>
        $(document).ready(function () {
            setRandomColors();
            $("#search").show();
            $('.tracksDropdown').on('change', function () {
                var selectedTrackId = $(this).val(); // Get the value of the selected option
                loadStudentsPartial(selectedTrackId); // Call the function with the selected ID
            });
        });
  </script>
    
}